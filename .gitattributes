# Auto-detect text files and normalize line endings to LF
* text=auto

# Explicitly declare files as text and normalize to LF
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.jsonc text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Ensure these remain as-is
.gitignore text eol=lf
.gitattributes text eol=lf
CODEOWNERS text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
